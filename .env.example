# Binance Trading Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# Binance API Keys (from https://www.binance.com/en/account/api-management)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Testnet Mode (set to True for testing, False for live trading)
TESTNET_MODE=True

# Trading Configuration
TRADING_STRATEGY=horlah_40percent_master
INTERVAL=1m
LEVERAGE=20
ORDER_SIZE=10
MAX_POSITIONS=15

# Take Profit / Stop Loss
TP_SL_CHOICE=%
TP_MULT=3.0
SL_MULT=1.0

# Symbols to Trade
TRADE_ALL_SYMBOLS=False
SYMBOLS_TO_TRADE=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT,DOGEUSDT,1000PEPEUSDT,ADAUSDT

# Logging
LOG_LEVEL=20
LOG_TO_FILE=False

# Performance
USE_MULTIPROCESSING=False
USE_TRAILING_STOP=False
